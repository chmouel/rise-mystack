#!/bin/zsh
set -e
if [[ $1 == "-c" ]];then
    clean=yes
    shift
fi
if [[ -z $@ ]];then
    DIRS=( /opt/stack ~/GIT )
else
    DIRS=$@
fi

for dir in ${DIRS};do
    cd ${dir}
    for gitdir in *(/);do
        [[ -d ${gitdir}/.git/ ]] || continue
        pushd ${gitdir}/$d >/dev/null;
            branch=${${"$(<.git/HEAD)"#ref: }#refs/heads/}
            [[ ${branch} == master ]] && cmd="pull" || cmd="fetch"

            for i in requirements.txt test-requirements.txt;do
                [[ -e $i ]] && git checkout -- $i
            done
            git ${cmd} --tags origin master
        popd >/dev/null
    done
done
